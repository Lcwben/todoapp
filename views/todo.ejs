                        <button class="complete">
                            <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 22 22" style="enable-background:new 0 0 22 22;" xml:space="preserve">
                                <rect y="0" class="noFill" width="22" height="22"/>
                                <g>
                                    <path class="fill" d="M9.7,14.4L9.7,14.4c-0.2,0-0.4-0.1-0.5-0.2l-2.7-2.7c-0.3-0.3-0.3-0.8,0-1.1s0.8-0.3,1.1,0l2.1,2.1l4.8-4.8c0.3-0.3,0.8-0.3,1.1,0s0.3,0.8,0,1.1l-5.3,5.3C10.1,14.3,9.9,14.4,9.7,14.4z"/>
                                </g>
                            </svg>
                        </button>
                    </div>
                </li>
                <% } %>
                <% }); %>
            </ul>
        </div>
    </nav>
    </div>
    <div id="maindiv" class="col-lg-7 container">

    </div>
    </div>
    </body>
    <script>
        $(document).ready(function() {

            //输入框按提交键调用的方法
            $('header').on('submit',()=> {
                let newNote = $('form input').val();

                if(!newNote || newNote.trim()=='') {
                    alert('您输入的内容为空。');
                    return;
                }

                $.ajax({
                    url : '/todo',
                    type : 'post',
                    data : {
                        'title': newNote,
                        'done' : false
                    },
                    success : (data)=> {

                    }
                });
            });

            /* 点击垃圾桶按钮事件 */
            $('.remove').click(deleteNote);

            /* 点击打钩按钮事件 */
            $('.complete').click(completeNote);
        })

        /* 删除笔记条目方法 */
        function deleteNote() {
            let liVal = $.trim($(this).parent().parent().text());
            $.ajax({
                url : '/todo',
                type : 'delete',
                data : {'title':liVal},
                success : (data)=> {
                    location.reload();
                },
                error(e) {
                    alert('删除出错！');
                }
            });
        }

        /* 笔记条目设为完成方法 */
        function completeNote() {
            let liVal = $.trim($(this).parent().parent().text());
            let isDone = $(this).parent().parent().val();
            if (isDone == 0) {
                $.ajax({
                    url : '/todo/complete',
                    type : 'post',
                    data : {
                        'title': liVal,
                        'done' : true
                    },
                    success : (data)=> {
                        location.reload();
                    },
                    error(e) {
                        alert('修改出错！');
                    }
                });
            }
        }
    </script>
</html>