    </div>
    </body>
    <script>
        $(document).ready(function() {

            //输入框按提交键调用的方法
            $('header').on('submit',()=> {
                let newNote = $('form input').val();

                if(!newNote || newNote.trim()=='') {
                    alert('您输入的内容为空。');
                    return;
                }

                $.ajax({
                    url : '/todo',
                    type : 'post',
                    data : {
                        'title': newNote,
                        'done' : false
                    },
                    success : (data)=> {

                    }
                });
            });

            /* 点击垃圾桶按钮事件 */
            $('.remove').click(deleteNote);

            /* 点击打钩按钮事件 */
            $('.complete').click(completeNote);
        })

        /* 删除笔记条目方法 */
        function deleteNote() {
            let liVal = $.trim($(this).parent().parent().text());
            $.ajax({
                url : '/todo',
                type : 'delete',
                data : {'title':liVal},
                success : (data)=> {
                    location.reload();
                },
                error(e) {
                    alert('删除出错！');
                }
            });
        }

        /* 笔记条目设为完成方法 */
        function completeNote() {
            let liVal = $.trim($(this).parent().parent().text());
            let isDone = $(this).parent().parent().val();
            if (isDone == 0) {
                $.ajax({
                    url : '/todo/complete',
                    type : 'post',
                    data : {
                        'title': liVal,
                        'done' : true
                    },
                    success : (data)=> {
                        location.reload();
                    },
                    error(e) {
                        alert('修改出错！');
                    }
                });
            }
        }
    </script>
</html>